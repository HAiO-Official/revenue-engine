{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": false,
    "esModuleInterop": true, // **Must be true**
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true, // true recommended (Node.js is case-sensitive)
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "allowJs": true,
    "baseUrl": ".", // Added for path configuration
    "paths": { // Type path problem resolution attempt (optional)
      "*": ["node_modules/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}