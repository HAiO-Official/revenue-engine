{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "noImplicitAny": false, 
    "strictNullChecks": false 

    
  },
  "include": [
    "scripts/**/*.ts",
    "tests/**/*.ts",
    "target/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}